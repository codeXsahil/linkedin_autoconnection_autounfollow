{
  "manifest_version": 3,
  "name": "LinkedIn Automation Tool",
  "version": "4.0",
  "description": "Automates connecting and unfollowing.",
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
